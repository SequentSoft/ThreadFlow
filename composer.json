{
    "name": "sequent-soft/thread-flow",
    "description": "A messenger bot framework",
    "keywords": [
        "php",
        "messenger",
        "bot",
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Serhii Litvinchuk",
            "email": "sergiy.litvinchuk@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.8.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SequentSoft\\ThreadFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SequentSoft\\ThreadFlow\\LaravelServiceProvider"
            ],
            "aliases": {
                "ThreadFlow": "SequentSoft\\ThreadFlow\\LaravelFacade"
            }
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "phpcs",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
