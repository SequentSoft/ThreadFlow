{
    "name": "sequentsoft/threadflow",
    "description": "A messenger bot framework",
    "keywords": [
        "php",
        "messenger",
        "bot",
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Serhii Litvinchuk",
            "email": "sergiy.litvinchuk@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/framework": "^9.0|^10.0|^11.0",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.9.0",
        "pestphp/pest-plugin-type-coverage": "^2.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "laravel/prompts": "Required for interactive cli commands"
    },
    "autoload": {
        "psr-4": {
            "SequentSoft\\ThreadFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SequentSoft\\ThreadFlow\\LaravelServiceProvider"
            ],
            "aliases": {
                "ThreadFlowBot": "SequentSoft\\ThreadFlow\\Laravel\\Facades\\ThreadFlowBot"
            }
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "phpcs",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test:type-coverage": "pest --type-coverage --min=99",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
